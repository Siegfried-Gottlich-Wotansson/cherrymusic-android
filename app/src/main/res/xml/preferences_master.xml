<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_title__general_settings">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/entries__profiles"
            android:entryValues="@array/values__zero_to_two"
            android:icon="@drawable/ic_account_circle_black_24dp"
            android:key="@string/pref_key__app_selected_profile"
            android:summary="@string/profile"
            android:title="@string/profile_selection" />

        <CheckBoxPreference
            android:icon="@drawable/ic_visibility_black_24dp"
            android:defaultValue="true"
            android:key="@string/pref_key__show_main_fab"
            android:title="@string/show_button_on_the_bottom" />

        <!--suppress AndroidDomInspection -->
        <net.gsantner.opoc.ui.LanguagePreference
            android:icon="@drawable/ic_language_black_24dp"
            android:defaultValue=""
            android:key="@string/pref_key__language"
            android:summary="@string/pref_desc__language"
            android:title="@string/pref_title__language"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/profile">

        <Preference
            android:icon="@drawable/ic_person_black_24dp"
            android:key="@string/profile_1"
            android:title="@string/profile_1" />

        <Preference
            android:icon="@drawable/ic_person_black_24dp"
            android:key="@string/profile_2"
            android:title="@string/profile_2" />

        <Preference
            android:icon="@drawable/ic_person_black_24dp"
            android:key="@string/profile_3"
            android:title="@string/profile_3" />
    </PreferenceCategory>
</PreferenceScreen>