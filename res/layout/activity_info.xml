<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InfoActivity" >

    <TextView
        android:id="@+id/textView_androidAppString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#22FF22"
        android:gravity="center"
        android:text="Android App"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_androidAppAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_androidAppString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="onAuthorClicked"
        android:text="@string/info_author" />

    <TextView
        android:id="@+id/textView_additionalContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_androidAppAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#22FF22"
        android:gravity="center"
        android:text="@string/info_additionalContact"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_additionalContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_additionalContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="onAdditionalPageClicked"
        android:text="@string/page_additional_homepage_short" />

    <Button
        android:id="@+id/textView_Version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#DE0453"
        android:textColor="#EEEEEE"
        android:gravity="center"
        android:onClick="onVersionClicked"
        android:text="App Version   vA.b"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>